<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FazerDenunciaActivity"
    android:background="@drawable/background_login">



        <TextView
            android:id="@+id/textFazerDenunciaTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Fazer uma denúncia"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textFazerDenunciaSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Denúnciar crimes ambientais é salvar o planeta."
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/textFazerDenunciaTitulo"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutTituloDaDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_edit_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFazerDenunciaSubtitulo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edit_login"
            android:hint="Título da Denúncia"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:singleLine="true"
            android:textColor="#2E2E2E" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDescricaoDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_edit_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutTituloDaDenuncia">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edit_login"
            android:hint="Descrição da Denúncia"
            android:padding="6dp"
            android:password="true"
            android:textColor="#2E2E2E" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutLocalDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_edit_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDescricaoDenuncia">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edit_login"
            android:hint="Local da Denúncia"
            android:padding="6dp"
            android:password="true"
            android:textColor="#2E2E2E" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDataDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_edit_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutLocalDenuncia">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_edit_login"
            android:hint="Data da Denúncia"
            android:padding="6dp"
            android:password="true"
            android:textColor="#2E2E2E" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonAnexarFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button_anexar_foto"
        android:text="Anexar foto"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutDataDenuncia"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutDataDenuncia"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDataDenuncia" />

    <Button
        android:id="@+id/buttonFazerDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_button_entrar_login"
        android:text="Fazer denúncia"
        android:textColor="#2E2E2E"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutDataDenuncia"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutDataDenuncia"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnexarFoto" />

</androidx.constraintlayout.widget.ConstraintLayout>