<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.treestudios.metoo.activity.MainActivity">

    <include layout="@layout/toolbar" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewPagerTab"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        app:stl_clickable="true"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#ffffffff"
        app:stl_defaultTabTextHorizontalPadding="16.0dip"
        app:stl_defaultTabTextMinWidth="0.0dip"
        app:stl_defaultTabTextSize="14.0sp"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@android:color/transparent"
        app:stl_dividerThickness="1.0dip"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="#ffffffff"
        app:stl_indicatorCornerRadius="2.0dip"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="4.0dip"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="false"
        app:stl_overlineColor="#4d000000"
        app:stl_overlineThickness="0.0dip"
        app:stl_titleOffset="24.0dip"
        app:stl_underlineColor="#15000000"
        app:stl_underlineThickness="1.0dip" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/viewPagerTab" />
</LinearLayout>